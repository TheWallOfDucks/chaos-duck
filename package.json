{
    "name": "chaos-duck",
    "version": "0.0.1",
    "description": "Chaos Duck is a small tool for testing resiliency and recoverability of AWS-based architectures. It's a serverless implementation of Netflix Chaos Monkey.",
    "scripts": {
        "build": "rm -rf lib && tsc",
        "coverage": "nyc report",
        "deploy": "npm run build ; gradle deploy -Daws_env=$npm_package_config_awsEnv -Daws_account=$npm_package_config_awsAccount -Daws_role=$npm_package_config_awsRole -Daws_profile=$npm_package_config_awsProfile -Daws_stage=$npm_package_config_awsStage",
        "generate_docs": "typedoc --out src/docs/typedoc src/classes/*.ts --ignoreCompilerErrors",
        "local": "npm run build ; serverless offline start",
        "pipeline-lint": "tslint -p ."
    },
    "pre-push": [
        "no-npmjs.org",
        "build",
        "pipeline-lint"
    ],
    "repository": "https://bitbucket.org/APITURE/chaos-duck",
    "config": {
        "awsEnv": "sandbox",
        "awsAccount": "439153947667",
        "awsRole": "Open-Sandbox-Developer",
        "awsProfile": "default",
        "awsStage": "dev"
    },
    "keywords": [
        "aws",
        "chaos",
        "reliability",
        "duck"
    ],
    "author": "Caleb Duckwall",
    "license": "ISC",
    "dependencies": {
        "aws-sdk": "^2.384.0",
        "axios": "^0.18.0"
    },
    "devDependencies": {
        "@apiture/pre-push": "^0.1.4",
        "@types/axios": "^0.14.0",
        "@types/jasmine": "^2.8.6",
        "@types/node": "^9.6.9",
        "gradle": "^1.0.9",
        "jasmine": "3.0.0",
        "jasmine-reporters": "^2.3.1",
        "jasmine-spec-reporter": "^4.2.1",
        "nyc": "^13.1.0",
        "serverless": "^1.32.0",
        "serverless-dotenv-plugin": "^2.0.1",
        "serverless-offline": "^3.31.0",
        "tslint": "^5.11.0",
        "tslint-config-airbnb": "^5.10.0",
        "tslint-config-prettier": "^1.15.0",
        "typedoc": "^0.11.1",
        "typescript": "^2.8.3"
    }
}
