{
    "name": "chaos-duck",
    "version": "0.0.1",
    "description": "Chaos Duck is a tool for testing resiliency and recoverability of AWS-based architectures. It's a serverless implementation of Netflix Chaos Monkey.",
    "bin": "lib/bin/index.js",
    "preferGlobal": true,
    "scripts": {
        "build": "rm -rf lib && tsc",
        "coverage": "nyc report",
        "deploy": "npm run build ; gradle deploy -Daws_env=$npm_package_config_awsEnv -Daws_account=$npm_package_config_awsAccount -Daws_role=$npm_package_config_awsRole -Daws_profile=$npm_package_config_awsProfile -Daws_stage=$npm_package_config_awsStage",
        "generate_docs": "typedoc --out docs/typedoc src/classes/*.ts --ignoreCompilerErrors --exclude src/lambda/*",
        "local": "npm run build ; serverless offline start",
        "lint": "tslint -p .",
        "undeploy": "npm run build ; gradle undeploy -Daws_env=$npm_package_config_awsEnv -Daws_account=$npm_package_config_awsAccount -Daws_role=$npm_package_config_awsRole -Daws_profile=$npm_package_config_awsProfile -Daws_stage=$npm_package_config_awsStage"
    },
    "repository": "https://bitbucket.org/APITURE/chaos-duck",
    "husky": {
        "hooks": {
            "pre-push": "npm run build && npm run lint"
        }
    },
    "keywords": [
        "aws",
        "chaos",
        "reliability",
        "duck",
        "ðŸ¦†"
    ],
    "author": "Caleb Duckwall",
    "license": "MIT",
    "dependencies": {
        "aws-sdk": "^2.384.0",
        "axios": "^0.18.0",
        "commander": "^2.19.0"
    },
    "devDependencies": {
        "@types/jasmine": "^2.8.6",
        "@types/node": "^9.6.9",
        "gradle": "^1.0.9",
        "husky": "^1.3.1",
        "jasmine": "3.0.0",
        "jasmine-reporters": "^2.3.1",
        "jasmine-spec-reporter": "^4.2.1",
        "nyc": "^13.1.0",
        "serverless": "^1.32.0",
        "serverless-dotenv-plugin": "^2.0.1",
        "serverless-offline": "^3.31.0",
        "tslint": "^5.11.0",
        "tslint-config-airbnb": "^5.10.0",
        "tslint-config-prettier": "^1.15.0",
        "typedoc": "^0.11.1",
        "typescript": "^2.8.3"
    }
}
