{
    "name": "chaos-duck",
    "version": "1.0.0",
    "description": "Chaos Duck is a tool for testing resiliency and recoverability of AWS-based architectures. It's a serverless implementation of Netflix Chaos Monkey.",
    "bin": "lib/src/bin/index.js",
    "preferGlobal": true,
    "scripts": {
        "build": "rm -rf lib && tsc",
        "generate_docs": "typedoc --out docs/typedoc src/classes/*.ts --ignoreCompilerErrors --exclude src/lambda/*",
        "link": "npm run build && npm link",
        "lint": "tslint -p .",
        "test": "npm run build ; jasmine lib/test/specs/*.spec.js --config=./test/config/jasmine.json"
    },
    "repository": "https://github.com/TheWallOfDucks/chaos-duck",
    "husky": {
        "hooks": {
            "pre-push": "npm run build && npm run lint"
        }
    },
    "keywords": [
        "aws",
        "chaos",
        "reliability",
        "duck",
        "ðŸ¦†"
    ],
    "author": "Caleb Duckwall",
    "license": "MIT",
    "dependencies": {
        "aws-sdk": "^2.384.0",
        "axios": "^0.18.0",
        "colors": "^1.3.3",
        "commander": "^2.19.0",
        "inquirer": "^6.2.1"
    },
    "devDependencies": {
        "@types/faker": "^4.1.5",
        "@types/jasmine": "^3.3.8",
        "@types/node": "^9.6.9",
        "faker": "^4.1.0",
        "gulp": "^4.0.0",
        "husky": "^1.3.1",
        "jasmine": "^3.3.1",
        "jasmine-reporters": "^2.3.1",
        "jasmine-spec-reporter": "^4.2.1",
        "minimist": "^1.2.0",
        "serverless": "^1.32.0",
        "tslint": "^5.11.0",
        "tslint-config-airbnb": "^5.10.0",
        "tslint-config-prettier": "^1.15.0",
        "typedoc": "^0.11.1",
        "typescript": "^2.8.3"
    }
}
